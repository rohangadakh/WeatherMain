<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.WeatherMain.AppWidget.Container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:theme="@style/Theme.WeatherMain.AppWidgetContainer">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:src="@drawable/style_round"/>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/circle"
        android:layout_marginTop="7.2dp"
        android:layout_marginStart="8dp"
        android:elevation="10dp"/>

    <ImageView
        android:id="@+id/img_wd_upt"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="13.6dp"
        android:layout_marginTop="11dp"
        android:elevation="10dp" />

    <TextView
        android:id="@+id/txt_wd_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp"
        android:fontFamily="@font/ar"
        android:layout_marginTop="4dp"
        android:layout_marginStart="80dp"
        android:textColor="@color/white"
        android:textSize="30sp"/>

</RelativeLayout>